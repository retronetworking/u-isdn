#!/bin/sh
PATH=.:/sbin:/usr/sbin:$PATH
cd /usr/local/isdn

(
	cd /boot/modules/$(uname -r)
	while read a ; do insmod -f -m $a ; done < ISDN_MODULES >> SYMBOLS

)
cd bin

ulimit -c 2000000

# monitor -ib >>/var/log/acct/ip </dev/null &

while : ; do
	nice --adjustment=-15 master -wdi /etc/isdn.conf >>/var/log/root/isdn.log 2>>/var/log/acct/isdn
	sleep 20
done &
