#!/bin/sh

set -ex

set $(isdn/tools/getversion)
VERS=$1
VERSION=$2

cp linux-work/arch/i386/boot/zImage /boot/linux-${VERSION}
if test ! -d /boot/modules/$VERSION ; then
	mkdir /boot/modules/$VERSION
	cp /boot/modules/prototype/* /boot/modules/$VERSION
fi
cp linux-work/modules/*.o /boot/modules/$VERSION

if fgrep $VERS /etc/lilo.conf >/dev/null ; then : ; else
echo "image = /boot/linux-$VERSION" >>/etc/lilo.conf
echo "	label = $VERS" >>/etc/lilo.conf
fi

/sbin/lilo
/sbin/lilo -R $VERS

